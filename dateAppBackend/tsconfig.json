{
  "compilerOptions": {
    "types": [
      "node",
      "express"
    ],
    "typeRoots": [
      "./typings", // Directorio donde están tus definiciones globales
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts" // Asegúrate de incluir los archivos de definición
  ]
}
